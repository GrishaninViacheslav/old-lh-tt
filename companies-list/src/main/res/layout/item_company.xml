<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="@dimen/inner_padding">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_item_width"
        android:layout_height="@dimen/card_item_height"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/view_page_offset"
        app:cardCornerRadius="@dimen/card_item_corner_radius"
        card_view:cardElevation="@dimen/card_item_elevation">

        <ImageView
            android:id="@+id/company_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_title_gradient"
            android:gravity="center"
            android:padding="@dimen/inner_padding"
            android:text="Hello world"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />
    </androidx.cardview.widget.CardView>
</FrameLayout>
